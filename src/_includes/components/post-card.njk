<article class="grid md:grid-cols-4 gap-5 mb-10 pb-10 border-b border-gray-200">
  <div class="col-span-3">
    {% if post.category %}
    <div class="text-sm text-gray-600 mb-2">
      Published in <a href="{{ post.category.url }}" class="hover:underline">{{ post.category.name }}</a>
    </div>
    {% endif %}
    
    <h2 class="text-xl md:text-2xl font-bold mb-2">
      <a href="/posts/{{ post.slug }}/" class="hover:underline">{{ post.title }}</a>
    </h2>
    
    <p class="text-gray-600 mb-3">{{ post.excerpt }}</p>
    
    <div class="flex items-center gap-4 text-sm text-gray-600">
      <span>{{ post.date | readableDate }}</span>
      <span>{{ post.views }}</span>
      <span>{{ post.comments }}</span>
    </div>
  </div>
  
  {% if post.imageUrl %}
  <div class="col-span-1 order-first md:order-last">
    <img src="{{ post.imageUrl }}" alt="{{ post.title }}" class="w-full h-32 md:h-full object-cover rounded">
  </div>
  {% endif %}
</article>