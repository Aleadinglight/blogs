<article class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-2">
  <div class="p-6 py-4">
    <div class="flex flex-col-reverse md:grid md:grid-cols-4 md:gap-5">
      <div class="md:col-span-3 mt-4 md:mt-0">
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <span>{{ post.date | readableDate }}</span>
        </div>
        
        {% if post.data.category %}
        <div class="text-sm text-gray-600 mb-2">
          Published in <a href="{{ post.data.category.url }}" class="hover:underline">{{ post.data.category.name }}</a>
        </div>
        {% endif %}
        
        <h2 class="text-xl md:text-2xl font-bold mb-2">
          <a href="{{ post.url }}" class="hover:text-sky-600 text-black">{{ post.data.title }}</a>
        </h2>
        
        <p class="text-gray-600 mb-3">{{ post.data.excerpt }}</p>
      </div>
      
      {% if post.data.imageUrl %}
      <div class="md:col-span-1">
        <img src="{{ post.data.imageUrl }}" alt="{{ post.data.title }}" class="w-full h-48 md:h-full object-cover rounded">
      </div>
      {% endif %}
    </div>
  </div>
</article>